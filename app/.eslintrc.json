{
    "env": {
        "es2021": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": [2, "never"],
      "import/no-unresolved": "off",
      "indent": [2, 4],
      "max-len": [2, 90],
      "semi": [2, "never"]
    }
}
